<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fragOne"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.explainDx.PartOne">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"

        >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/grupo"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/TitleOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ex_dxTitle"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/colorPurple"
            android:layout_margin="15dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/one"
            app:layout_constraintTop_toBottomOf="@id/TitleOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/ex_dx"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="20dp"
            android:gravity="center_horizontal" />


    </LinearLayout>




</FrameLayout>