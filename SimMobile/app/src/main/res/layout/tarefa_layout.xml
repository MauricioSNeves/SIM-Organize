<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_tarefa"
        android:background="#ffffff"
        android:padding="2dp">


        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_checklist_concluir_foreground"
            android:layout_alignParentStart="true"
            android:id="@+id/ib_concluir"
            android:background="@color/colorWhite"
            android:onClick="concluir"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nomeTarefa"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/ib_concluir"
            />
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_checklist_editar_foreground"
            android:onClick="editar"
            android:id="@+id/ib_editar"
            android:background="@color/colorWhite"

            android:layout_alignParentEnd="true"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true" />
        <ImageButton
            android:layout_alignParentEnd="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_checklist_apagar_foreground"
            android:background="@color/colorWhite"

            android:onClick="apagar"
            android:id="@+id/ib_excluir"
            android:layout_alignParentRight="true" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>